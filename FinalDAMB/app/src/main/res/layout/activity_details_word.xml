<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    tools:context=".Word.DetailsWord">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên thì: "
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#5C5757"/>
        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="16dp"
            android:text="Text" />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khái niệm: "
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#5C5757"/>
        <TextView
            android:id="@+id/txtKN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="16dp"
            android:text="Tên" />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thể khẳng định: "
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#5C5757"/>
        <TextView
            android:id="@+id/txtKD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textColor="#00BCD4"
            android:textSize="16dp"
            android:text="Tên" />
        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thể phủ định: "
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#5C5757"/>
        <TextView
            android:id="@+id/txtPD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="16dp"
            android:textColor="#F44336"
            android:text="Tên" />
        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thể nghi vấn: "
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#5C5757"/>
        <TextView
            android:id="@+id/txtNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="#4CAF50"
            android:textSize="16dp"
            android:text="Tên" />
        <TextView
            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dấu hiệu nhận biết: "
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#5C5757"/>
        <TextView
            android:id="@+id/txtSignal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="16dp"
            android:text="Tên" />
        <TextView
            android:id="@+id/txt7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cách sử dụng thì: "
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#5C5757"/>
        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="16dp"
            android:text="Tên" />

    </LinearLayout>
</ScrollView>